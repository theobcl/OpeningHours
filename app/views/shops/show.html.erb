<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><%= @shop.name %></h2>
  <%= link_to t("back_to_menu"), root_path, class:"btn btn-secondary" %>
</div>

<h4 class="mb-4"><%= t("opening_hours") %></h4>

<% @shop.sorted_opening_hours_per_day.each_with_index do |opening_hours, index|%>
  <% day, slots = opening_hours %>
  <div <%= "class=fw-bold" if index == 0 %>>
    <% if slots.size > 1 %>
      <% first_slot, last_slot = slots %>
      <p><%= t("#{day}") %> : <%= first_slot.display_start_at %> - <%= first_slot.display_end_at %>, <%= last_slot.display_start_at %> : <%= last_slot.display_end_at %></p>
    <% else %>
      <% slot = slots.first %>
      <% if slot.is_closed %>
        <p><%= t("#{day}") %>: <%= slot.display_closed_day %></p>
      <% else %>
        <p><%= t("#{day}") %> : <%= slot.display_start_at %> - <%= slot.display_end_at %>
      <% end %>
    <% end %>
  </div>
<% end %>
